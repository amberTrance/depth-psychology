<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('./partials/head.ejs') %>
<body>
    <div class="container">
        <!-- navbar -->
        <%- include('./partials/nav.ejs') %>
        <div class="home">
            <div style="margin-top:50px;">
                <h1>Depth Psychology Archives</h1>
                <% if (user === undefined) { %> 
                    <h3>Admin Log In</h3>
                    <% if (error != '') { %>
                        <p class="error"><%= error %><span class="x">&#10006;</span></p>    
                    <% } %>
                    <% if (success_msg != '') { %>
                        <p class="success"><%= success_msg %><span class="x">&#10006;</span></p>    
                    <% } %>
                    <% if (error_msg != '') { %>
                        <p class="error"><%= error_msg %><span class="x">&#10006;</span></p>    
                    <% } %>
                    <form action="/" method="POST">
                        <input name="userName" type="text" class="log" placeholder="username"><br>
                        <input name="password" type="password" class="log" placeholder="password"><br>
                        <button class="btn">Submit</button>
                    </form>
                    <p>or</p><br>
                    <a href="/about" class="visitor">Continue as visitor</a>
                <% } else { %>
                    <h3>Welcome!</h3>
                    <form action="/logout" method="GET">
                        <button class="btn">Log Out</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>  
</body>
</html>
